apiVersion: v1
kind: Pod
metadata:
  name: nginx-pod
  labels:
    app: nginx
spec:
  containers:
  - name: nginx-container
    image: nginx:latest
    ports:
    - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
spec:
  type: NodePort
  selector:
    app: nginx
  ports:
  - name: http
    port: 80           # Port trong cluster (ClusterIP)
    targetPort: 80     # Port trong container
    nodePort: 32726    # Port ngoài Node (có the bo de auto-assign 30000–32767)
